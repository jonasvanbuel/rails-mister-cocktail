<h1><%= @cocktail.name %></h1>

<h5>Ingredients:</h5>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> <%= Ingredient.find(dose.ingredient_id).name %>
    </li>
  <% end %>
</ul>

<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), { class: "btn btn-primary" } %>

<%= link_to "Delete cocktail", cocktail_path(@cocktail), :method => :delete, :class => "btn btn-danger" %>
